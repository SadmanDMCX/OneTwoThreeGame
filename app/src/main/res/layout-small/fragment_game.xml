<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000f"
    tools:context="main.ott.game.sadmandmcx.com.onetwothree.GameFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#ffffff"
            android:text="00"
            android:textSize="35sp"
            android:layout_margin="20dp"
            android:id="@+id/scoreCounter"
            android:layout_weight="0"
            android:shadowColor="#ffffff"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="24"
            />
        <!--
        <TextSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textSize="120sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/quiz"
            android:layout_below="@+id/scoreCounter"/>
            -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f1f1f1"
            android:text="1+2+3=?"
            android:ellipsize="none"
            android:maxLines="1"
            android:maxLength="9"
            android:textSize="80sp"
            android:gravity="center"
            android:id="@+id/quiz"
            android:layout_below="@+id/scoreCounter"
            android:layout_weight="1"
            android:shadowColor="#ffffff"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="24"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:background="@android:drawable/screen_background_light_transparent"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:id="@+id/click1"
                android:layout_weight="0"
                android:shadowColor="#ffffff"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:max="4500"
                android:indeterminate="false"
                android:id="@+id/clickProgress1"
                android:layout_alignTop="@+id/click1"
                android:layout_alignBottom="@+id/click1"
                android:progressDrawable="@drawable/custom_progress_bar_in_game_gra_risk_meter"
                android:maxHeight="50dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#ffffff"
                android:background="@android:drawable/screen_background_light_transparent"
                android:textSize="40dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:id="@+id/click2"
                android:layout_weight="0"
                android:shadowColor="#ffffff"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:max="4500"
                android:indeterminate="false"
                android:id="@+id/clickProgress2"
                android:layout_alignTop="@+id/click2"
                android:layout_alignBottom="@+id/click2"
                android:progressDrawable="@drawable/custom_progress_bar_in_game_gra_risk_meter"
                android:maxHeight="50dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#ffffff"
                android:background="@android:drawable/screen_background_light_transparent"
                android:textSize="40dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:id="@+id/click3"
                android:layout_weight="0"
                android:shadowColor="#ffffff"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:max="4500"
                android:indeterminate="false"
                android:id="@+id/clickProgress3"
                android:layout_alignTop="@+id/click3"
                android:layout_alignBottom="@+id/click3"
                android:progressDrawable="@drawable/custom_progress_bar_in_game_gra_risk_meter"
                android:maxHeight="50dp" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Good Luck"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_weight="0"
            android:textSize="30sp"
            android:layout_margin="15dp"
            android:id="@+id/goodLuckText"
            />

    </LinearLayout>



</RelativeLayout>
